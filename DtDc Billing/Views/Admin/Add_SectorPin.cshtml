@model  IEnumerable<DtDc_Billing.Entity_FR.Sector>
@using (Ajax.BeginForm("Add_SectorPin", "Admin", new AjaxOptions { HttpMethod = "Post", UpdateTargetId = "frmEmp1" }))
{


    if (TempData["Success"] != null)
    {
        <p class="alert alert-success" id="successMessage">@TempData["Success"]</p>
    }

   
        <div class="container" style="padding:0" >
            <div class="col-sm-12 no-padding">
                <div class="box box-info">
                    <div class="box-header with-border">
                        <h4 class="box-title">Add Sector</h4>
                    </div>
                    <div class="sector">
                        <div class="mt-15">
                            <div class="col-md-2">
                                <input type="submit" value="Add Sector" class="btn btn-primary" />
                            </div>
                        </div>

                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-horizontal">
                                <div class="box-body">
                                    <table id="add-sector-pin" class="table table-responsive table-bordered" style="display:inline-table !important; width:100%; text-align:center;">
                                        <thead>
                                            <tr>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.Sector_Name)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.Pincode_values)
                                                </th>


                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                                <tr>

                                                    <td>
                                                        <label>@Html.DisplayFor(modelItem => item.Sector_Name)</label>
                                                    </td>
                                                    <td>
                                                        <label style="width:100%">
                                                            @Html.TextAreaFor(modelItem => item.Pincode_values, new { htmlAttributes = new { @class = "form-control input-sm" } })
                                                        </label>

                                                    </td>
                                                    @Html.HiddenFor(modelItem => item.Sector_Id)

                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                    <div class="mt-15">
                                        <input type="hidden" name="pfcode" value="@ViewBag.pfcode" />
                                        @Html.ValidationMessage("PinError")
                                        @{
                                            if (ViewBag.Message != null)
                                            {
                                                <div class="alert-danger" style="width:400px;height:30px">
                                                    @ViewBag.Message
                                                </div>
                                            }
                                        }
                                        <div class="col-md-12" style="text-align: right;">
                                            <div class="form-group">
                                                <div class="">
                                                    <input type="submit" value="Save" class="btn btn-primary" />
                                                    </div>
                                                </div>
                                            </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                    </div>
                </div>
            </div>
        </div>
   
}






@if (TempData["Success1"] != null)
{
    <script>

        $(document).ready(function () {

            alert('Franchisee Added Success fully Please Fill Ratemater');

        });

    </script>

}

<script>
    $(function () {
        $('#franchisee-list').addClass('active');
    });
</script>



@if (ViewBag.DataSector != null)
{
    <script>
        $('.sector').hide()
    </script>
}
else
{
    <script>
        $('.sector').show()
    </script>
}






