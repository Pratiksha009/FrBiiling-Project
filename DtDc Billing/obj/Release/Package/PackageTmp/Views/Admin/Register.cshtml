            border-radius: 3px;
        }

        .forgot {
            text-align: left;
            margin-bottom: 30px;
        }

        .botto-text {
            color: #ffffff;
            font-size: 14px;
            margin: auto;
        }

        .login-form .btn.btn-primary.reset {
            background: #ff9900 none repeat scroll 0 0;
        }

        .back {
            text-align: left;
            margin-top: 10px;
        }

            .back a {
                color: #444444;
                font-size: 13px;
                text-decoration: none;
            }

        #formloginbox {
            width: 350px;
        }

        .mymsg {
            padding: 0;
        }

        .formlogo a {
            font-size: 33px;
            color: #f0ad4e;
        }

        .formlogo h4 {
            color: #dfdfdf;
            font-size: 50px;
            font-weight: bold;
        }

        .formlogo span {
            color: #fa440a;
            margin-right: -14px;
        }

        span.logotxt1 {
            color: #a94442;
            font-size: 50px;
            font-weight: 900;
        }

        .logotxt2 {
            font-size: 50px;
            font-weight: 100;
            color: black;
        }

        .logo-text {
            font-size: 1.3em;
            text-align: center;
            color: #090808;
            font-family: 'Roboto Slab', serif;
