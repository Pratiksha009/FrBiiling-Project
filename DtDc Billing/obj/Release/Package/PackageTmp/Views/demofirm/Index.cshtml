@model IEnumerable<DtDc_Billing.Entity_FR.FirmDetail>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<section>
    <div class="container">
        <h2>Index</h2>

        <p>
            @Html.ActionLink("Create New", "Create")
        </p>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Firm_Name)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Firm_Name)
                    </td>

                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Firm_Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Firm_Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Firm_Id })
                    </td>

                </tr>
            }

        </table>
    </div>
</section>
